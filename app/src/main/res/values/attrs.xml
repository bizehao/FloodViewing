<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SideLetterBar">
        <attr name="press_background_color" format="color"/>
        <attr name="background_color" format="color"/>
    </declare-styleable>

    <!--自定义属性 -->
    <declare-styleable name="ClipViewLayout">
        <attr name="clipType" format="enum">
            <enum name="circle" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="mHorizontalPadding" format="dimension" />
        <attr name="clipBorderWidth" format="dimension" />
    </declare-styleable>


    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <!-- PageLayoutDemojava -->
    <declare-styleable name="BlinkLayout">
        <attr name="blink_color" format="color|reference"/>
        <attr name="blink_animation_duration" format="integer|reference"/>
    </declare-styleable>

    <!-- 自定义徽章 -->
    <declare-styleable name="BGABadgeView">
        <!-- 徽章背景色 -->
        <attr name="badge_bgColor" format="reference|color" />
        <!-- 徽章文本的颜色 -->
        <attr name="badge_textColor" format="reference|color" />
        <!-- 徽章文本字体大小 -->
        <attr name="badge_textSize" format="reference|dimension" />
        <!-- 徽章背景与宿主控件上下边缘间距离 -->
        <attr name="badge_verticalMargin" format="reference|dimension" />
        <!-- 徽章背景与宿主控件左右边缘间距离 -->
        <attr name="badge_horizontalMargin" format="reference|dimension" />
        <!-- 徽章文本边缘与徽章背景边缘间的距离 -->
        <attr name="badge_padding" format="reference|dimension" />
        <!-- 徽章在宿主控件中的位置 -->
        <attr name="badge_gravity" format="enum">
            <enum name="rightTop" value="0" />
            <enum name="rightCenter" value="1" />
            <enum name="rightBottom" value="2" />
        </attr>
        <!-- 是否可以拖拽删除徽章 -->
        <attr name="badge_draggable" format="boolean" />
        <!-- 拖拽徽章超出轨迹范围后，再次放回到轨迹范围时，是否恢复轨迹 -->
        <attr name="badge_isResumeTravel" format="boolean" />
        <!-- 徽章描边宽度 -->
        <attr name="badge_borderWidth" format="reference|dimension" />
        <!-- 徽章描边颜色 -->
        <attr name="badge_borderColor" format="reference|color" />
        <!-- 触发开始拖拽徽章事件的扩展触摸距离 -->
        <attr name="badge_dragExtra" format="reference|dimension" />
    </declare-styleable>

    <!-- 自定义圆 -->
    <declare-styleable name="CircleView">
        <attr name="circle_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="FreeNumberPicker">
        <!-- 按钮正常的颜色-->
        <attr name="btnColor" format="color" />
        <!-- 按钮按下颜色-->
        <attr name="btnPressColor" format="color" />
        <!-- 按钮文字颜色-->
        <attr name="btnTextColor" format="color" />
        <!-- 按钮按下文字颜色-->
        <attr name="btnTextPressColor" format="color" />
        <!-- 按钮无法点击的颜色-->
        <attr name="btnTextDisableColor" format="color" />
        <!-- 中间数字背景颜色-->
        <attr name="numberColor" format="color" />
        <!-- 中间数字的颜色-->
        <attr name="numberTextColor" format="color" />
        <!-- 最小值，达到最小值减按钮无法点击-->
        <attr name="minValue" format="integer" />
        <!-- 最大值，达到最大值加按钮无法点击-->
        <attr name="maxValue" format="integer" />
        <!-- 按钮文字大小 单位dp（加减线条大小）-->
        <attr name="btnTextSize" format="dimension" />
        <!-- 数字大小 单位dp（文字的大小）-->
        <attr name="numberSize" format="dimension" />
        <!-- 中间数字所占宽度，其它的加减按钮平分-->
        <attr name="numberWidth" format="dimension" />
        <!-- 数字是否支持键盘编辑-->
        <attr name="supportEdit" format="boolean" />
        <!-- 数字是否支持手指左后滑动数字滚动-->
        <attr name="supportMove" format="boolean" />
        <!-- 边框颜色-->
        <attr name="storkColor" format="color" />
        <!-- 边框大小-->
        <attr name="storkWidth" format="dimension" />
        <!-- 按钮圆角半径-->
        <attr name="btnRadius" format="dimension" />
        <!-- 按钮无法点击时的颜色-->
        <attr name="btnDisableColor" format="color" />
        <!-- 长按按钮数字自动滚动 默认true-->
        <attr name="longPressScroll" format="boolean" />
    </declare-styleable>
</resources>
