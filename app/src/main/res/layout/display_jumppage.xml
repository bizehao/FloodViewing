<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:id="@+id/display_jumppage_totalpage"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginBottom="10dp"
        android:text=""/>
    <com.bzh.floodview.ui.widget.FreeNumberPicker
        android:id="@+id/display_jumppage_jumppage"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        app:btnTextSize="2dp"
        app:numberSize="12dp"
        app:maxValue="10"
        app:minValue="0"
        app:supportEdit="true"
        app:numberWidth="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/jump_determine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bt_shape"
            android:textSize="20sp"
            android:text="确定"/>
        <Button
            android:id="@+id/jump_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/bt_shape"
            android:textSize="20sp"
            android:text="取消"/>
    </LinearLayout>

</LinearLayout>