<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/dm_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:src="@drawable/ic_close" />

            <TextView
                android:id="@+id/dm_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/font_20sp" />

            <com.bzh.floodview.ui.widget.LoadingView
                android:id="@+id/drm_rain_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/dm_close" />

            <LinearLayout
                android:id="@+id/drm_rain_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/dm_close"
                android:orientation="vertical">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/dm_chart"
                    android:layout_width="match_parent"
                    android:layout_height="240dp" />
                <LinearLayout
                    android:id="@+id/dm_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:textSize="@dimen/font_15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="开始时间"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:textAlignment="viewEnd"
                        android:textSize="@dimen/font_15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="结束时间"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/dm_timetxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/drm_start_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/dark_grey"
                        android:layout_marginStart="4dp"
                        android:textSize="@dimen/font_16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="2018-09-12 08:00"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="@dimen/font_16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="到"/>
                    <TextView
                        android:id="@+id/drm_end_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginEnd="4dp"
                        android:background="@color/dark_grey"
                        android:textSize="@dimen/font_16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="2018-09-12 08:00"/>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/dm_rlv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    tools:listitem ="@layout/item_map"/>

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</FrameLayout>